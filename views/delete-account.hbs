<div class="login-container">
  <form action="/delete-user" method="POST" class="signup-form">
    <legend class="form-legend">Delete Account</legend>
    <p class="form-title">Enter your credentials to delete your account</p>

    <!--Username-->
    <div class="form-group">
      <label for="username"></label>
      <input class="form-control" type="text" name="username" placeholder="Username" required>
    </div>

    <!--Password-->
    <div class="form-group">
      <label for="password"></label>
      <input class="form-control" type="password" name="password" placeholder="Password" required>
    </div>

    <!--Buttons-->
		<div class="form-btns">
	    <button class="btn btn-success signup-btn" type="submit">Delete</button>
	    <a href="/" class="btn btn-light" role="button">Cancel</a>
		</div>
    <p class='text-danger text-warning'>Warning, this can not be undone. Are you sure?</p>
  </form>
</div>